<h1><%= t('.test', title: @test.title) %></h1>

<table class="table table-dark table-striped text-center text-top">
  <thead>
    <tr>
      <th>Question</th>
      <th colspan="3">Actions</th>
    </tr>
  <thead>
    <%= render @test.questions %>
</table>

<p>
  <%= link_to t('.new_question'), new_admin_test_question_path(@test) %> |
  <%= link_to t('.delete_test'), admin_test_path(@test), method: :delete, data: {confirm: 'Are you sure?'} %>
</p>

<p><%= link_to 'Back', admin_tests_path %></p>
