<h1><%= @test.title %> Test</h1>

<table>
  <tr>
    <th>Question</th>
    <th colspan="4">Actions</th>
  </tr>
  <%= render @test.questions %>
</table>

<p>
  <%= link_to 'Create Question', new_admin_test_question_path(@test) %> | 
  <%= link_to 'Delete Test', admin_test_path(@test), method: :delete, data: {confirm: 'Are you sure?'} %>
</p>

<p><%= link_to 'Back', admin_tests_path %></p>
